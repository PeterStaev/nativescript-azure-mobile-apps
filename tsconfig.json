{
    "compilerOptions": {
        "noEmitOnError": true,
        "noEmitHelpers": true,
        "noUnusedLocals": true,
        "sourceMap": false,
        "noLib": true,
        "removeComments": true,
        "declaration": false,
        "experimentalDecorators": true,
        "target": "es5",
        "module": "commonjs",
        "outDir": "bin/dist",
        "lib": [
            "es2016"
        ]
    }, 
    "exclude": [
        "node_modules", 
        "sample", 
        "bin"
    ]
}